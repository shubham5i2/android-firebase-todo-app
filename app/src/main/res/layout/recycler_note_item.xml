<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:background="@drawable/rounded_corner"
    android:backgroundTint="#F6E09E"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/note_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:textStyle="bold"
        android:text="Note title"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/note_content_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="This can be note content"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/note_timestamp_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:gravity="right"
        android:text="Timestamp"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/edit_note_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/baseline_edit_24">

        </ImageView>

        <ImageView
            android:id="@+id/delete_note_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_delete_24">

        </ImageView>
    </LinearLayout>

</LinearLayout>